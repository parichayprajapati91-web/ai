# Voice Authenticator - Environment Configuration Example
# Copy this file to .env and fill in your actual values
# For Vercel deployment, set these variables in Vercel dashboard

# ==================== Server Configuration ====================
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# ==================== Python Configuration ====================
# Path to Python executable (for voice forensics analysis)
# Local dev: .venv/Scripts/python.exe (Windows) or .venv/bin/python (Unix)
# Production: python3
PYTHON_EXE=python3

# ==================== Frontend Configuration ====================
# API endpoint URL for frontend
VITE_API_URL=/api

# ==================== Database Configuration ====================
# SQLite database path (default)
DATABASE_URL=./sqlite.db

# ==================== API Authentication ====================
# Comma-separated valid API keys
# Generate with: node -e "console.log('sk_' + require('crypto').randomBytes(24).toString('hex'))"
VALID_API_KEYS=sk_test_123456789

# ==================== CORS Configuration ====================
CORS_ORIGIN=http://localhost:3000

# ==================== Audio Processing ====================
# Sample rate for audio analysis (Hz)
AUDIO_SAMPLE_RATE=16000

# Maximum audio file size (MB)
MAX_AUDIO_SIZE=100

# ==================== Detection Settings ====================
# Confidence threshold (0-100)
CONFIDENCE_THRESHOLD=60

# Supported languages (comma-separated)
SUPPORTED_LANGUAGES=Hindi,Tamil,Telugu,Malayalam,Bengali,English

# ==================== Email Configuration (Optional) ====================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password
# MAIL_FROM=noreply@voiceauthenticator.com

# ==================== Logging ====================
# Log level: debug, info, warn, error
LOG_LEVEL=info

# Log file location (leave empty to disable file logging)
LOG_FILE=./logs/app.log

# ==================== Python Voice Analysis ====================
# Python executable path (auto-detected if empty)
# PYTHON_PATH=/usr/bin/python3

# Enable advanced features (experimental)
ENABLE_GPU_ACCELERATION=false
ENABLE_STREAMING_ANALYSIS=false

# ==================== API Documentation ====================
# Swagger/OpenAPI endpoint
# ENABLE_API_DOCS=true
# API_DOCS_ENDPOINT=/api/docs

# ==================== Cache Configuration ====================
# Redis URL (optional)
# REDIS_URL=redis://localhost:6379

# Cache TTL in seconds
CACHE_TTL=3600

# ==================== Monitoring & Analytics ====================
# Sentry DSN for error tracking (optional)
# SENTRY_DSN=

# Analytics enabled
ANALYTICS_ENABLED=false

# ==================== Development Settings ====================
# Debug mode
DEBUG=false

# Skip SSL verification (DEVELOPMENT ONLY)
# NODE_TLS_REJECT_UNAUTHORIZED=0

# ==================== PostgreSQL Specific ====================
# Only needed if using PostgreSQL
# POSTGRES_USER=voiceauth
# POSTGRES_PASSWORD=changeme
# POSTGRES_DB=voice_authenticator
